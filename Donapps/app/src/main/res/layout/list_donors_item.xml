<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfileFound"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_user"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtNameProfileFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/txtCityProfileFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/txtPhoneProfileFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/txtBloodProfileFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start">
                    <ImageView
                        android:id="@+id/imageCallDonor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_gravity="center"
                        android:layout_margin="25dp"
                        />
                    <ImageView
                        android:id="@+id/imageMessageDonor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_mail"
                        android:layout_gravity="center"
                        android:layout_margin="25dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




</android.support.v7.widget.CardView>

