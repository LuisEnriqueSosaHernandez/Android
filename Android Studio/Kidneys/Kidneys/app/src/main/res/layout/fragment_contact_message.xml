<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsContact.ContactMessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:weightSum="2">

        <EditText
            android:id="@+id/editTextToContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/alice"
            android:hint="@string/destinario"
            android:inputType="none"
            android:paddingRight="1dp"
            android:paddingTop="12dp"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextSubjectContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:ems="10"
            android:fontFamily="@font/alice"
            android:gravity="top"
            android:hint="@string/asunto"
            android:inputType="textCapWords"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextMessageContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/alice"
            android:gravity="top"
            android:hint="@string/mensaje"
            android:inputType="textCapSentences"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSendContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:background="@color/colorAzul"
            android:fontFamily="@font/alice"
            android:text="@string/enviar"
            android:textAllCaps="false"
            android:textColor="@color/colorBlanco"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>