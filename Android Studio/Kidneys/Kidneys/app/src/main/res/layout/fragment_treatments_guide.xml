<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_treatments_guides"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorBlanco"
        card_view:cardCornerRadius="4dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingContentTreatmentsGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="8dp"
            android:clickable="true"
            android:src="@drawable/ic_content"
            app:backgroundTint="@color/colorBlancoNeutro"
            app:borderWidth="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewTreatmentsGuide"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/fondo" />

            <TextView
                android:id="@+id/textViewNameTreatmentsGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAzul"
                android:fontFamily="@font/alice"
                android:gravity="center"
                android:padding="4dp"
                android:text="Guide"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorBlanco"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/textViewDescriptionTreatmentsGuide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alice"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/description"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorNegro"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/textViewNumPagesTreatmentsGuide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alice"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/numeropaginas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorNegro"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/textViewAuthorTreatmentsGuide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alice"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/autor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorNegro"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/textViewYearPublicationTreatmentsGuide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alice"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/aiopublicacion"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorNegro"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/textViewReferenceTreatmentsGuide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alice"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/referencias"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorNegro"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view_treatments_guides_download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorBlanco"
                        card_view:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewDescargarTreatmentsGuide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alice"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="@string/descargar"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/colorNegro"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/floatingDownloadTreatmentsGuide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:src="@drawable/ic_download"
                                app:backgroundTint="@color/colorBlancoNeutro"
                                app:borderWidth="0dp" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/floatingDeleteTreatmentsGuide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:src="@drawable/ic_delete"
                                app:backgroundTint="@color/colorBlanco"
                                app:borderWidth="0dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>