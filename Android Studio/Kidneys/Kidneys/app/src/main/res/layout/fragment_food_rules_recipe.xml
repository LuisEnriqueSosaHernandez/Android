<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_food_rules_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorBlanco"
        card_view:cardCornerRadius="4dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingFoodRulesRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="8dp"
            android:clickable="true"
            android:src="@drawable/ic_healthy"
            app:backgroundTint="@color/colorBlanco"
            app:borderWidth="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/fondo" />

            <TextView
                android:id="@+id/textViewTitleFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorVerde"
                android:fontFamily="@font/alice"
                android:gravity="center"
                android:padding="4dp"
                android:text="Pizza"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorBlanco"
                android:textSize="30sp"
                android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorBlanco"
                card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/textViewDescriptionFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/description"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorNegro"
                android:textSize="15sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorBlanco"
                card_view:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <TextView
                android:id="@+id/textViewPorcionFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/unaporcion"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorNegro"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/layoutFoodRulesRecipes"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorVerde">
                <TextView
                    android:id="@+id/textViewSodioFoodRulesRecipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/sodio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorBlanco"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textViewPotasioFoodRulesRecipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/potasio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorBlanco"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textViewFosforoFoodRulesRecipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/fosforo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorBlanco"
                    android:textSize="15sp" />
            </LinearLayout>
</LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorBlanco"
                card_view:cardCornerRadius="4dp">
            <TextView
                android:id="@+id/textViewIngredientsFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:gravity="bottom"
                android:padding="4dp"
                android:text="@string/ingredients"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorNegro"
                android:textSize="15sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorBlanco"
                card_view:cardCornerRadius="4dp">
            <TextView
                android:id="@+id/textViewPrepareFoodRulesRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:gravity="bottom"
                android:padding="4dp"
                android:text="@string/prepare"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorNegro"
                android:textSize="15sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>