<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsFollow.FragmentsFollowFollow.FollowFollowDayFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorBlanco"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlanco"
                android:gravity="left"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingAddFollowFollowsDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/ic_add"
                    app:backgroundTint="@color/colorBlancoNeutro"
                    app:borderWidth="0dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingLinesFollowFollowsDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/ic_twolines"
                    app:backgroundTint="@color/colorBlancoNeutro"
                    app:borderWidth="0dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingAllFollowFollowsDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/ic_search"
                    app:backgroundTint="@color/colorBlancoNeutro"
                    app:borderWidth="0dp" />

                <EditText
                    android:id="@+id/editTextFilterFollowFollowsDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ems="10"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:hint="@string/buscar"
                    android:inputType="textCapSentences"
                    android:paddingRight="1dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/colorNegro"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerviewFollowFollowsDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>