<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_alert_food_rules_recipes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorBlanco"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAlertRecomendFoodRulesRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:padding="4dp"
            android:text="Recomendado"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlanco"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewAlertFoodRulesRecipes"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/fondo" />
        <TextView
            android:id="@+id/textViewAlertPorcionFoodRulesRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:gravity="bottom|center"
            android:padding="4dp"
            android:text="@string/unaporcion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorNegro"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/layoutDataFoodRulesRecipes"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBlancoNeutro">
        <TextView
            android:id="@+id/textViewAlertSodioFoodRulesRecipess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/sodio"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlanco"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textViewAlertPotasioFoodRulesRecipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/potasio"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlanco"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textViewAlertFosforoFoodRulesRecipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/fosforo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlanco"
            android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewAlertNameFoodRulesRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="4dp"
        android:text="Manzana"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorBlanco"
        android:textSize="30sp"
        android:textStyle="bold" />
</android.support.v7.widget.CardView>