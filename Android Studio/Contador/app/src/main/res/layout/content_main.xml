<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pc.contador.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pulsaciones"
            android:id="@+id/tituloTexto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/contadorTexto"
            android:layout_below="@+id/tituloTexto"
            android:layout_centerHorizontal="true"
            android:textSize="56dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:id="@+id/sumador"
            android:onClick="incrementar"
            android:layout_above="@+id/reseteo"
            android:layout_alignRight="@+id/restador"
            android:layout_alignEnd="@+id/restador"
            android:textSize="70dp" />
        <android.support.v4.widget.Space
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:id="@+id/restador"
            android:onClick="resta"
            android:layout_below="@+id/reseteo"
            android:layout_alignRight="@+id/tituloTexto"
            android:layout_alignEnd="@+id/tituloTexto"
            android:textSize="70dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resetear"
            android:id="@+id/reseteo"
            android:onClick="resetea"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/sumador"
            android:layout_alignStart="@+id/sumador" />

        <EditText
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:id="@+id/n_reseteo"
            android:gravity="center_horizontal"
            android:hint="0"
            android:inputType="numberSigned"
            android:cursorVisible="false"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conteo Negativo"
            android:id="@+id/negativos"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
